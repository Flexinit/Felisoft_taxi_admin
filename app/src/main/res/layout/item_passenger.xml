<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_passenger_no"
                style="@style/TextView.Black.Small" />

            <Space
                style="@style/SpaceMiniTrim"
                android:layout_width="10dp" />

            <TextView
                android:id="@+id/tv_passenger_name"
                style="@style/TextView.Black.Small" />
        </LinearLayout>


        <Switch
            android:id="@+id/switch_board"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.40"
            android:showText="true"
            android:textOff="@string/not_b"
            android:textOn="@string/b"
            android:thumb="@drawable/custom_board_passenger_switch"
            android:track="@drawable/custom_board_switch_track" />

    </LinearLayout>


</androidx.cardview.widget.CardView>