<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp">
        <TextView
            style="@style/TextView_style_d"
            android:text="@string/post_ride_request"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/tvPostRideRequest"
            />

        <TextView
            android:id="@+id/tvPickup"
            style="@style/TextView_style_d"
            android:text="Indore"
            android:layout_toRightOf="@id/tvSource"
            android:layout_below="@id/tvPostRideRequest"
            android:layout_marginTop="10dp"
            android:layout_marginStart="6dp"
            android:textSize="14sp"/>
        <TextView
            style="@style/TextView_style_d"
            android:text="@string/pick_up_location"
            android:id="@+id/tvSource"
            android:layout_below="@id/tvPostRideRequest"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            style="@style/TextView_style_d"
            android:text="No. fo Co-riders:"
            android:id="@+id/tvNumCoRiders"
            android:layout_below="@id/tvSource"
            android:layout_marginTop="10dp"
            android:textSize="14dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvNumCoRidersValue"
            style="@style/TextView_style_d"
            android:text="3"
            android:layout_toRightOf="@id/tvNumCoRiders"
            android:layout_below="@id/tvSource"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textSize="14sp"/>

        <TextView
            style="@style/TextView_style_d"
            android:text="Type of driver:"
            android:id="@+id/tvDriverType"
            android:layout_below="@id/tvNumCoRiders"
            android:layout_marginTop="10dp"
            android:textSize="14dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvDriverTypeValue"
            style="@style/TextView_style_d"
            android:text="Silent"
            android:layout_toRightOf="@id/tvNumCoRiders"
            android:layout_below="@id/tvNumCoRiders"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textSize="14sp"/>
        <TextView
            style="@style/TextView_style_d"
            android:text="Message:"
            android:id="@+id/tvMessage"
            android:layout_below="@id/tvDriverType"
            android:layout_marginTop="10dp"
            android:textSize="14dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvMessageValue"
            style="@style/TextView_style_d"
            android:text="Rider's message"
            android:layout_toRightOf="@id/tvNumCoRiders"
            android:layout_below="@id/tvDriverType"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textSize="14sp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="Ok"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:id="@+id/btOk"
            android:layout_below="@id/tvMessageValue"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_corner_button_black"
            android:textColor="@color/pure_white"/>


    </RelativeLayout>
</RelativeLayout>