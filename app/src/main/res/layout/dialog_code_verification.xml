<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextView.Black.Medium"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/ask_customer_otp" />

    <Space style="@style/SpaceMini" />

    <com.mukesh.OtpView
        android:id="@+id/otp_verification_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="number"
        android:itemBackground="@color/colorWhite"
        android:textColor="@color/colorSlightlyLightBlack"
        app:itemCount="6"
        app:itemSpacing="2dp"
        app:lineColor="@color/colorBlack"
        app:viewType="rectangle" />

    <Space style="@style/SpaceMini" />


    <Button
        android:id="@+id/btn_start_ride"
        style="@style/Black_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_corner_button"
        android:enabled="false"
        android:minWidth="128dp"
        android:text="@string/start_ride" />


</LinearLayout>